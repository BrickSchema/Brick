bsh:OWLEquivalentClassRule1
    a   sh:NodeShape ;
    sh:rule [
        a sh:SPARQLRule ;
        sh:construct """
CONSTRUCT {
    ?s a ?t2 .
} WHERE {
    ?s a $this .
    { ?t2 owl:equivalentClass $this }
    UNION
    { $this owl:equivalentClass ?t2 }
}""" ;
    sh:prefixes owl: ;
    ] ;
    sh:targetSubjectsOf owl:equivalentClass ;
.

bsh:OWLEquivalentClassRule2
    a   sh:NodeShape ;
    sh:rule [
        a sh:SPARQLRule ;
        sh:construct """
CONSTRUCT {
    ?s a ?t2 .
} WHERE {
    ?s a $this .
    { ?t2 owl:equivalentClass $this }
    UNION
    { $this owl:equivalentClass ?t2 }
}""" ;
    sh:prefixes owl: ;
    ] ;
    sh:targetObjectsOf owl:equivalentClass ;
.
